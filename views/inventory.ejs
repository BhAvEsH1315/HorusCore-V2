<!-- views/inventory.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Inventory</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-4">Inventory</h1>
        <form method="post" action="/inventory/add">
            <div class="form-group">
                <label for="Inventory_Id">Inventory ID:</label>
                <input type="number" class="form-control" id="Inventory_Id" name="Inventory_Id" required>
            </div>
            <div class="form-group">
                <label for="Name">Name:</label>
                <input type="text" class="form-control" id="Name" name="Name" required>
            </div>
            <div class="form-group">
                <label for="Description">Description:</label>
                <input type="text" class="form-control" id="Description" name="Description" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Inventory</button>
        </form>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Inventory ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% inventory.forEach(item => { %>
                    <tr>
                        <td><%= item.Inventory_Id %></td>
                        <td><%= item.Name %></td>
                        <td><%= item.Description %></td>
                        <td>
                            <form method="post" action="/inventory/delete/<%= item.Inventory_Id %>" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
